---
import Layout from '../../layouts/Layout.astro';

const title = "Page Not Found | Clutch Jobs";
const description = "The page you're looking for doesn't exist.";
const canonicalURL = Astro.url.pathname;
---

<Layout 
  title={title}
  description={description}
  canonicalURL={canonicalURL}
>
  <main class="min-h-screen bg-white pt-32">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center">
        <h1 class="text-4xl font-bold mb-4">Page Not Found</h1>
        <p class="text-gray-600 mb-8">
          The page you're looking for doesn't exist or has been removed.
        </p>
        <a href="/companies" class="text-[#87B440] hover:underline">
          Back to Companies
        </a>
      </div>
    </div>
  </main>
</Layout>